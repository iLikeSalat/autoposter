# AutoPoster Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================
# Threads API Configuration
# ============================================
# Get your credentials from: https://developers.facebook.com/apps/
THREADS_CLIENT_ID=your_threads_app_id
THREADS_CLIENT_SECRET=your_threads_app_secret
THREADS_REDIRECT_URI=https://your-redirect-uri.com/
THREADS_ACCESS_TOKEN=your_long_lived_access_token
THREADS_USER_ID=your_threads_user_id

# Optional: Custom image hosting URL (if not using ImgBB/Imgur)
# THREADS_IMAGE_HOST_URL=https://your-domain.com/images/

# ============================================
# OpenAI API Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# ============================================
# Image Hosting Configuration
# ============================================
# ImgBB API Key (recommended)
# Get your API key from: https://api.imgbb.com/
IMGBB_API_KEY=your_imgbb_api_key

# Alternative: Imgur (less reliable)
# IMGUR_CLIENT_ID=your_imgur_client_id

# ============================================
# Platform Enablement
# ============================================
# Set to 'true' to enable, 'false' to disable
ENABLE_THREADS=true
ENABLE_TWITTER=false

# ============================================
# Auto-Reply System
# ============================================
# Set to 'true' to enable automatic replies to comments
ENABLE_AUTO_REPLIES=true

# ============================================
# Twitter/X API Configuration (Optional)
# ============================================
# Get your credentials from: https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

